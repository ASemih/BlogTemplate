@page "{slug}"
@using BlogTemplate
@using BlogTemplate.Models
@inject Blog Blog
@model EditModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Edit Post";
}

<article>
    <h2>Edit Post</h2>
    <form method="post">
        <p><h3><label for="Title">Title</label></h3></p>
        <p><input type="text" name="Title" asp-for="newPost.Title" value="@Model.oldPost.Title" /></p>
        <p><h4><label for="Body">Body</label></h4></p>
        <p><textarea name="Body" asp-for="newPost.Body" value="@Model.oldPost.Body"></textarea></p>
        <p><label for="Excerpt">Excerpt (Optional)</label></p>
        <p><textarea name="Excerpt" asp-for="newPost.Excerpt" value="@Model.oldPost.Excerpt"></textarea></p>
        <p><label for="Tags">Tags (separated by comma)</label></p>
        <p><input type="text" name="Tags" value="@string.Join(", ", Model.oldPost.Tags)" /></p>
        <p><input type="checkbox" /><label for="IsPublic">Make public</label></p>
        <input type="submit" name="save" value="Save Draft" asp-page-handler="SaveDraft" />
        <input type="submit" name="publish" value="Publish" asp-page-handler="Publish" />
    </form>
</article>