@page "{slug}"
@model PostModel
@{
    ViewData["Title"] = Model.Post.Title;
}

<article>
    <h1>@Model.Post.Title</h1>
    <p id="date">@Model.Post.PubDate.ToString("MMM dd, yyyy")</p>
    <span>@string.Join(", ", Model.Post.Tags)</span>
    <p>@Model.Post.Body</p>
   
    <h2>Comments</h2>
    @for(int i = 0; i < Model.Post.Comments.Count; i++){
       <p>@Model.Post.Comments[i].AuthorName</p>
       <p>@Model.Post.Comments[i].Body</p>
       <p>@Model.Post.Comments[i].PubDate</p>
    }

</article>