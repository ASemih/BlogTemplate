@page
@using BlogTemplate
@using BlogTemplate.Models
@*@model Models.Blog*@
@inject Blog Blog
@model NewModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "New Blog Post";
}

<h2>Write a New Post</h2>
<form method="POST">
    <div class="form-group">
        @Html.LabelFor(x => Model.Post.Title, "Title")
        @Html.TextBoxFor(x => Model.Post.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.Post.Body, "Your post...")
        @Html.TextBoxFor(x => Model.Post.Body, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.Post.Excerpt, "Excerpt (optional)")
        @Html.TextBoxFor(x => Model.Post.Excerpt, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => Model.Post.TagsString, "Tags (separated by comma)")
        @Html.TextBoxFor(x => Model.Post.TagsString, new { @class = "form-control" })
    </div>
    <input type="submit" name="save" value="Save Draft" asp-page-handler="SaveDraft" />
    <input type="submit" name="publish" value="Publish" asp-page-handler="Publish" />
</form>
